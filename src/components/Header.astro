---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class="bg-gray-800 text-white shadow-lg">
	<nav class="container mx-auto px-6">
		<div class="flex items-center justify-between h-16">
			<!-- Left: Logo and Brand -->
			<div class="flex items-center space-x-2">
				<img src="/logo-white.svg" alt="Logo" class="h-8 w-8" />
				<span class="text-2xl font-bold tracking-wide">
					{SITE_TITLE}
				</span>
			</div>
			
			<!-- Center: Navigation Menu -->
			<div class="hidden md:flex items-center space-x-8">
				<div class="relative group">
					<button class="flex items-center space-x-1 text-white hover:text-green-400 transition-colors duration-200">
						<span class="uppercase font-medium tracking-wide">Categorías</span>
						<svg class="w-4 h-4 transition-transform group-hover:rotate-180" fill="currentColor" viewBox="0 0 20 20">
							<path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
						</svg>
					</button>
					<!-- Dropdown Menu -->
					<div class="absolute left-0 top-full mt-2 w-64 bg-gray-800 border border-gray-700 shadow-xl rounded-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 z-50">
						<div class="p-3 ">
							<a href="/categoria/noticias-ia" class="block p-2 rounded-md hover:bg-gray-700 transition-colors duration-200 border border-transparent hover:border-green-400">
								<h3 class="font-medium text-white text-sm">Noticias de IA</h3>
								<p class="text-xs text-gray-300">Últimos avances y tendencias en IA</p>
							</a>
							<a href="/categoria/tutoriales-ia" class="block p-2 rounded-md hover:bg-gray-700 transition-colors duration-200 border border-transparent hover:border-green-400">
								<h3 class="font-medium text-white text-sm ">Tutoriales de IA</h3>
								<p class="text-xs text-gray-300">Guías paso a paso y herramientas</p>
							</a>
							<a href="/categoria/modelos-generativos" class="block p-2 rounded-md hover:bg-gray-700 transition-colors duration-200 border border-transparent hover:border-green-400">
								<h3 class="font-medium text-white text-sm">Modelos Generativos</h3>
								<p class="text-xs text-gray-300">GPT, DALL-E, Gemini y más</p>
							</a>
						</div>
					</div>
				</div>
				<HeaderLink href="/blog" class="uppercase font-medium tracking-wide text-green-400 hover:text-green-300 transition-colors duration-200">
					Blog
				</HeaderLink>
				<HeaderLink href="/contact" class="uppercase font-medium tracking-wide text-white hover:text-green-400 transition-colors duration-200">
					Contacto
				</HeaderLink>
				<HeaderLink href="/mentoria" class="uppercase font-medium tracking-wide text-white hover:text-green-400 transition-colors duration-200">
					Tu Mentoría Gratis!
				</HeaderLink>
			</div>
			
			<!-- Right: Social Media Icons -->
			<div class="flex items-center space-x-4">
				<!-- Instagram -->
				<a href="https://instagram.com/" target="_blank" rel="noopener noreferrer" 
				   class="text-white hover:text-green-400 transition-colors duration-200">
					<svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
						<path d="M7.75 2h8.5A5.75 5.75 0 0 1 22 7.75v8.5A5.75 5.75 0 0 1 16.25 22h-8.5A5.75 5.75 0 0 1 2 16.25v-8.5A5.75 5.75 0 0 1 7.75 2zm0 1.5A4.25 4.25 0 0 0 3.5 7.75v8.5A4.25 4.25 0 0 0 7.75 20.5h8.5A4.25 4.25 0 0 0 20.5 16.25v-8.5A4.25 4.25 0 0 0 16.25 3.5h-8.5zm4.25 3.25a5.25 5.25 0 1 1 0 10.5 5.25 5.25 0 0 1 0-10.5zm0 1.5a3.75 3.75 0 1 0 0 7.5 3.75 3.75 0 0 0 0-7.5zm5.25.75a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
					</svg>
				</a>
				<!-- LinkedIn -->
				<a href="https://linkedin.com/" target="_blank" rel="noopener noreferrer" 
				   class="text-white hover:text-green-400 transition-colors duration-200">
					<svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
						<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
					</svg>
				</a>
			</div>
			
			<!-- Mobile menu button -->
			<div class="md:hidden">
				<button class="text-white hover:text-green-400 transition-colors duration-200">
					<svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
					</svg>
				</button>
			</div>
		</div>
	</nav>
</header>
<!-- Los estilos ahora se manejan con Tailwind CSS -->
