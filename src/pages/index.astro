---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="bg-gray-950">
		<Header />
		<main class="container mx-auto px-4 py-8">
			<div class="text-center text-white">
				<h1 class="text-4xl font-bold mb-4">Bienvenido a {SITE_TITLE}</h1>
				<p class="text-xl text-gray-300 mb-8">{SITE_DESCRIPTION}</p>
				<a href="/blog" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg transition-colors">
					Ver Blog
				</a>
			</div>
		</main>
		<Footer />
	</body>
</html>
